<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_signup"
    android:layout_centerVertical="true"
    tools:context=".MainActivity"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/img_uyw_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="24dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/hr_monitor"
        android:maxHeight="200dp"
        android:maxWidth="300dp"
        android:scaleType="fitCenter"
        android:src="@drawable/uyw" />

    <TextView
        android:id="@+id/tv_signup_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/img_uyw_logo"
        android:gravity="center"
        android:text="@string/signup_for_cloud_app_completed"
        android:textColor="@color/secondarytext"
        android:textSize="@dimen/primary_text" />


</RelativeLayout>